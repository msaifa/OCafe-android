<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="TitleNavigation">
        <item name="android:textColorSecondary">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="AppBarku" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="textLabelLight" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/abu</item>
        <item name="colorAccent">@color/abu</item>
        <item name="colorControlNormal">@color/abu</item>
        <item name="colorControlActivated">@color/abu</item>
    </style>

    <style name="textLabelDark" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/abutulisan</item>
        <item name="colorAccent">@color/abutulisan</item>
        <item name="colorControlNormal">@color/abutulisan</item>
        <item name="colorControlActivated">@color/abutulisan</item>
    </style>

    <style name="LightTextInputLayout" parent="TextAppearance.AppCompat">

        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>

    </style>

</resources>
